@model List<CustomerAccountProcess>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CustomerLayout/Index.cshtml";
}


<div class="content-wrapper mt-1">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Son TL İşlemlerim</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Son TL İşlemlerim</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12">
                    <div class="timeline">
                        @foreach (var groupedItem in Model.GroupBy(item => item.ProcessDate.Date))
                        {
                            <div class="time-label">
                                <span class="bg-success">@groupedItem.Key.ToShortDateString()</span>
                            </div>

                            foreach (var item in groupedItem)
                            {
                                <div>
                                    <i class="fas fa-clock bg-dark"></i>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header"><strong>@item.ProcessType</strong></h3>
                                        <div class="timeline-body">
                                            @item.Description
                                        </div>
                                        <div class="timeline-footer">
                                            <a class="btn btn-primary btn-sm">Dekont Göster</a>
                                        </div>
                                    </div>
                                </div>
                                
                            }
                        }
                        <div>
                            <i class="fas fi-br-minus bg-dark"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
